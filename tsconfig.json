{
  "compilerOptions": {
    "target": "ESNext", // Use ESNext to support modern JavaScript features
    "module": "ESNext", // Use ESNext for ES modules (ESM)
    "moduleResolution": "node", // Resolve modules in a way that matches Node.js resolution
    "esModuleInterop": true, // Enable interop with CommonJS modules
    "allowSyntheticDefaultImports": true, // Allow default imports from CommonJS modules
    "outDir": "./dist", // Specify the output directory
    "skipLibCheck": true, // Skip type checking of declaration files
    "strict": true, // Enable strict type checking
    "forceConsistentCasingInFileNames": true,
    "declaration": true, // Generate declaration files (.d.ts)
    "declarationMap": true // Generate declaration maps
  },
  "include": ["src/**/*"], // Include your source files
  "exclude": ["node_modules"] // Exclude node_modules
}
