{
  "compilerOptions": {
    "target": "ESNext", // Use ESNext for modern JS features
    "module": "ESNext", // Use ESNext modules (ESM)
    "moduleResolution": "node", // Ensure module resolution behaves like Node.js
    "esModuleInterop": true, // Allow interoperability between CommonJS and ES Modules
    "allowSyntheticDefaultImports": true, // Enable default imports from CommonJS modules
    "skipLibCheck": true, // Skip type checking of declaration files
    "strict": true, // Enable strict type checking
    "forceConsistentCasingInFileNames": true
  },
  "include": ["src/**/*"], // Add the correct source folder if necessary
  "exclude": ["node_modules"]
}
